<%= render ContentAreasComponent.new do |c| %>
  <%= c.with(:header) do %>
    <%= render SubcomponentComponent::HeaderComponent.new(classes: "header") do %>
      Header
    <% end %>
  <% end %>

  <%= c.with(:items) do %>
    <%= ["a", "b", "c"].each do |item| %>
      <%= render SubcomponentComponent::ItemComponent.new(classes: "header") do %>
        <%= item %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
